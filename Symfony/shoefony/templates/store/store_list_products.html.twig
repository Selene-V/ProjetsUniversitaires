{% extends 'layout.html.twig' %}

{% block title %}Nos produits - {{ parent() }}{% endblock %}

{% block content %}
<div class="row">
    <div class="col-md-3">
        {{ render(controller('App\\Controller\\StoreController::listBrandsMenu', {'brandId': brand_id ?? null})) }}
    </div>

    <div class="col-md-9">
        <p class="lead">Nos produits " Toutes les marques "</p>
        <div class="row text-center">
            {% if products == null %}
                <p>Désolé, il n'y a aucun produit.</p>
            {% else %}
                {% for product in products %}
                    <div class="col-md-4 col-sm-6 hero-feature">
                        {{ include('store/_composant_item_product.html.twig') }}
                    </div>
                {% endfor %}
            {% endif %}
        </div>
    </div>

    <div class="row text-center">
        <nav>
            <ul class="pagination pagination-lg">
                <li>
                    <a href="#" aria-label="Précédent">
                        <span aria-hidden="true">&laquo;</span>
                    </a>
                </li>
                {% for i in 1..2 %}
                    <li class="{{ i is same as(1) ? 'active' }}">
                        <a href="#">{{ i }}</a>
                    </li>
                {% endfor %}
                <li>
                    <a href="#" aria-label="Suivant">
                        <span aria-hidden="true">&raquo;</span>
                    </a>
                </li>
            </ul>
        </nav>
    </div>
</div>

<hr/>

{% endblock %}