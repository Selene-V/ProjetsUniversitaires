{% extends 'layout.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-sm-offset-2 col-sm-8 col-md-offset-3 col-md-6">
            <div class="panel panel-info">
                <div class="panel-body">
                    <form method="POST">
                        <h1 class="text-center">Connexion</h1>

                        <hr>

                        {% if error %}
                            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                        {% endif %}

                        <div class="form-group">
                            <label for="username">Nom d'utilisateur</label>
                            <input name="username" id="username" type="text" class="form-control" placeholder="Nom d'utilisateur" value="{{ last_username }}" required autofocus>
                        </div>
                        <div class="form-group">
                            <label for="password">Mot de passe</label>
                            <input name="password" id="password" type="password" class="form-control" placeholder="Mot de passe" required>
                        </div>

                        <hr>

                        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                        <button type="submit" class="btn btn-info btn-block">Connexion</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
{% endblock %}