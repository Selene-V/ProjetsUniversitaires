{% extends 'layout.html.twig' %}

{% block title %}Détails - {{ parent() }}{% endblock %}

{% block content %}
<main class="app-content">
    <div class="app-title">
        <div>
            <h1><i class="fa fa-laptop"></i>&nbsp;Suivi de {{ project.nom|capitalize }}</h1>
        </div>
        <ul class="app-breadcrumb breadcrumb">
            <li class="breadcrumb-item">
                <a href="{{ path('main_index') }}"><i class="fa fa-home fa-lg"></i></a>
            </li>
            <li class="breadcrumb-item">
                <a href="{{ path('project_list') }}">Projects</a>
            </li>
            <li class="breadcrumb-item">Suivi de {{ project.nom|capitalize }}</li>
        </ul>
    </div>
    <div class="row">
        <div class="col-md-4">
            <div class="tile">
                <table class="table table-striped table-bordered table-sm">
                    <tbody>
                    <tr>
                        <th>Nom</td>
                        <td>{{ project.nom|capitalize }}</td>
                    </tr>
                    <tr>
                        <th>Description</td>
                        <td>{{ project.description }}</td>
                    </tr>
                    <tr>
                        <th>Prix de vente</td>
                        <td>{{ project.prixVente|format_currency('EUR') }}</td>
                    </tr>
                    <tr>
                        <th>Date de création</td>
                        <td>{{ project.dateCreation|date("d/m/Y") }}</td>
                    </tr>
                    <tr>
                        <th>Date de livraison</td>
                        <td>{{ project.dateLivraison|date("d/m/Y") }}</td>
                    </tr>
                    <tr>
                        <th>Coût de production total</td>
                        {% set totalCost = 0 %}
                        {% for employee in nbEmployeeByProject %}
                            {% set totalCost = totalCost + employee.coutTotal %}
                        {% endfor %}
                        <td>{{ totalCost|format_currency('EUR') }}</td>
                    </tr>
                    <tr>
                        <th>Nombre d'employés ayant travaillés dessus</td>
                        <td>{{ nbEmployeeByProject|length }}</td>
                    </tr>
                    </tbody>
                </table>
                {% if is_granted('ROLE_MANAGER') %}
                    {% if project.dateLivraison == null %}
                        <a href="{{ asset('/project/modify/' ~ project.id) }}" class="btn btn-info">
                            <i class="fa fa-pencil"></i>Modifier
                        </a>
                    {% else %}
                        <a href="{{ asset('/project/modify/' ~ project.id) }}" class="btn btn-secondary disabled">
                            <i class="fa fa-pencil"></i>Modifier
                        </a>
                    {% endif %}
                {% endif %}
            </div>
            {% if project.dateLivraison == null %}
                <div class="tile">
                    {% for flash_type, messages in app.flashes %}
                        {% for message in messages %}
                            <div class="alert alert-{{ flash_type }}" role="alert">
                                {{ message }}
                            </div>
                        {% endfor %}
                    {% endfor %}
                    <h3 class="title-title mb-4">Ajouter un temps</h3>
                    {{ form_start(form) }}
                    {% if is_granted('ROLE_MANAGER') %}
                        <div class="form-group row">
                            <label for="select-projects" class="control-label col-md-6">Employé concerné</label>
                            <div class="col-md-6">
                                {{ form_errors(form.employee) }}
                                {{ form_widget(form.employee, {'attr': {'class': 'form-control', 'placeholder': form.employee.vars.label} }) }}
                            </div>
                        </div>
                        {% endif %}
                    <div class="form-group row">
                        <label for="select-projects" class="control-label col-md-6">Nombre d'heures</label>
                        <div class="col-md-6">
                            {{ form_errors(form.nbHeures) }}
                            {{ form_widget(form.nbHeures, {'attr': {'class': 'form-control', 'placeholder': form.nbHeures.vars.label} }) }}
                        </div>
                    </div>
                    <div class="row">
                        <div class="offset-md-6 col-md-8">
                            <button type="submit" class="btn btn-success"><i class="fa fa-save"></i>Enregistrer</button>
                        </div>
                    </div>
                    {{ form_end(form) }}
                </div>
            {% endif %}
        </div>
        <div class="col-md-8">
            <div class="tile pb-5">
                <h3 class="tile-title">Liste des employés ayant travaillés sur le projet</h3>
                <div class="table-responsive">
                    <table class="table table-striped table-hover table-sm">
                        <thead>
                        <tr>
                            <th>Nom</th>
                            <th>Nombre d'heures</th>
                            <th>Coût total</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for pt in productionsTimes %}
                        <tr>
                            <td>{{ pt.employee.prenom|capitalize }} {{ pt.employee.nom|upper }}</td>
                            <td>{{ pt.nbHeures }} heures</td>
                            <td>{{ (pt.nbHeures*pt.employee.coutHoraire)|format_currency('EUR') }}</td>
                        </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
                <hr/>
                {% include 'pagination.html.twig' %}
            </div>
        </div>
    </div>
</main>
{% endblock %}