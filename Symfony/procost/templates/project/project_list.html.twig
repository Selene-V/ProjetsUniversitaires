{% extends 'layout.html.twig' %}

{% block title %}Projets - {{ parent() }}{% endblock %}

{% block content %}
    <main class="app-content">
        <div class="app-title">
            <div>
                <h1><i class="fa fa-laptop"></i>&nbsp;Projets</h1>
            </div>
            <ul class="app-breadcrumb breadcrumb">
                <li class="breadcrumb-item">
                    <a href="{{ path('main_index') }}"><i class="fa fa-home fa-lg"></i></a>
                </li>
                <li class="breadcrumb-item">Projets</li>
            </ul>
        </div>
        {% for flash_type, messages in app.flashes %}
            {% for message in messages %}
                <div class="alert alert-{{ flash_type }}" role="alert">
                    {{ message }}
                </div>
            {% endfor %}
        {% endfor %}
        <div class="tile pb-5">
            {% if is_granted('ROLE_MANAGER') %}
                <a href="{{ path('project_create') }}" class="btn btn-primary float-right mb-4"><i class="fa fa-plus-circle mr-2"></i>Ajouter un projet</a>
            {% endif %}
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead>
                    <tr>
                        <th>Nom</th>
                        <th>Description</th>
                        <th>Prix de vente</th>
                        <th>Date de cr√©ation</th>
                        <th>Date de livraison</th>
                        <th></th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for project in projects %}
                        <tr>
                            <td>{{ project.nom|capitalize }}</td>
                            <td>{{ project.description }}</td>
                            <td>{{ project.prixVente|format_currency('EUR') }}</td>
                            <td>{{ project.dateCreation|date("d/m/Y") }}</td>
                            {% if project.dateLivraison == null %}
                                <td></td>
                            {% else %}
                                <td>{{ project.dateLivraison|date("d/m/Y") }}</td>
                            {% endif %}
                            <td>
                                <a href="{{ asset('/project/show/' ~ project.id) }}" class="btn btn-primary btn-sm">
                                    <i class="fa fa-eye mr-0"></i>
                                </a>
                                {% if is_granted('ROLE_MANAGER') %}
                                    {% if project.dateLivraison == null %}
                                        <a href="{{ asset('/project/modify/' ~ project.id) }}" class="btn btn-info btn-sm">
                                            <i class="fa fa-pencil mr-0"></i>
                                        </a>
                                        <a href="{{ asset('/project/delivery/' ~ project.id) }}" class="btn btn-warning btn-sm">
                                            <i class="fa fa-truck mr-0"></i>
                                        </a>
                                    {% else %}
                                        <a href="{{ asset('/project/modify/' ~ project.id) }}" class="btn btn-secondary btn-sm disabled">
                                            <i class="fa fa-pencil mr-0"></i>
                                        </a>
                                        <a href="{{ asset('/project/delivery/' ~ project.id) }}" class="btn btn-secondary btn-sm disabled">
                                            <i class="fa fa-truck mr-0"></i>
                                        </a>
                                    {% endif %}
                                {% endif %}
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
            <hr/>
            {% include 'pagination.html.twig' %}
        </div>
    </main>
{% endblock %}