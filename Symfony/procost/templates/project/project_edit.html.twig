{% extends 'layout.html.twig' %}

{% block title %}Edition - {{ parent() }}{% endblock %}

{% block content %}
    <main class="app-content">
        {% if project.nom == null %}
            <div class="app-title">
                <div>
                    <h1><i class="fa fa-users"></i>&nbsp;Edition d'un projet</h1>
                </div>
                <ul class="app-breadcrumb breadcrumb">
                    <li class="breadcrumb-item">
                        <a href="{{ path('main_index') }}"><i class="fa fa-home fa-lg"></i></a>
                    </li>
                    <li class="breadcrumb-item">
                        <a href="{{ path('project_list') }}">Projets</a>
                    </li>
                    <li class="breadcrumb-item">Edition d'un projet</li>
                </ul>
            </div>
        {% else %}
            <div class="app-title">
                <div>
                    <h1><i class="fa fa-users"></i>&nbsp;Edition de {{ project.nom }}</h1>
                </div>
                <ul class="app-breadcrumb breadcrumb">
                    <li class="breadcrumb-item">
                        <a href="{{ path('main_index') }}"><i class="fa fa-home fa-lg"></i></a>
                    </li>
                    <li class="breadcrumb-item">
                        <a href="{{ path('project_list') }}">Projets</a>
                    </li>
                    <li class="breadcrumb-item">Edition de {{ project.nom }}</li>
                </ul>
            </div>
        {% endif %}
        {{ form_start(form) }}
            <section>
                <h3>Informations générales</h3>
                <div class="row mt-4">
                    <div class="offset-md-4 col-md-8">
                        <div class="form-group row">
                            {{ form_errors(form.nom) }}
                            {{ form_label(form.nom) }}
                            {{ form_widget(form.nom, {'attr': {'class': 'form-control', 'placeholder': form.nom.vars.label} }) }}
                        </div>
                        <div class="form-group row">
                            {{ form_errors(form.description) }}
                            {{ form_label(form.description) }}
                            {{ form_widget(form.description, {'attr': {'class': 'form-control', 'placeholder': form.description.vars.label, 'rows': 3} }) }}
                        </div>
                        <div class="form-group row">
                            {{ form_errors(form.prixVente) }}
                            {{ form_label(form.prixVente) }}
                            {{ form_widget(form.prixVente, {'attr': {'class': 'form-control', 'placeholder': form.prixVente.vars.label} }) }}
                        </div>
                    </div>
                </div>
            </section>
            <hr/>
            <div class="row">
                <div class="offset-md-6 col-md-6">
                    <button type="submit" class="btn btn-success"><i class="fa fa-save"></i>Enregistrer</button>
                </div>
            </div>
        {{ form_end(form) }}

        <hr/>
    </main>
{% endblock %}