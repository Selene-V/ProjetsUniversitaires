<nav class="float-right">
    <ul class="pagination">
        {% if currentPage == 1 %}
            <li class="page-item disabled">
                <a class="page-link">&laquo;</a>
            </li>
        {% else %}
            <li class="page-item">
                {% set newCurrentPage = currentPage-1 %}
                <a class="page-link" href="{{ asset(url ~ newCurrentPage) }}">&laquo;</a>
            </li>
        {% endif %}

        {% for i in 1..nbPages %}
            {% if i == currentPage %}
                <li class="page-item active" aria-current="page">
                    <a class="page-link" href="{{ asset(url ~ i) }}">{{ i }}</a>
                </li>
            {% else %}
                <li class="page-item" aria-current="page">
                    <a class="page-link" href="{{ asset(url ~ i) }}">{{ i }}</a>
                </li>
            {% endif %}
        {% endfor %}

        {% if currentPage == nbPages %}
            <li class="page-item disabled">
                <a class="page-link">&raquo;</a>
            </li>
        {% else %}
            <li class="page-item">
                {% set newCurrentPage = currentPage+1 %}
                <a class="page-link" href="{{ asset(url ~ newCurrentPage) }}">&raquo;</a>
            </li>
        {% endif %}
    </ul>
</nav>