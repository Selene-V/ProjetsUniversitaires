{% extends 'layout.html.twig' %}

{% block title %}Edition - {{ parent() }}{% endblock %}

{% block content %}
    <main class="app-content">
        {% if employee.nom == null %}
            <div class="app-title">
                <div>
                    <h1><i class="fa fa-users"></i>&nbsp;Edition d'un employé</h1>
                </div>
                <ul class="app-breadcrumb breadcrumb">
                    <li class="breadcrumb-item">
                        <a href="{{ path('main_index') }}"><i class="fa fa-home fa-lg"></i></a>
                    </li>
                    <li class="breadcrumb-item">
                        <a href="{{ path('employee_list') }}">Employé</a>
                    </li>
                    <li class="breadcrumb-item">Edition d'un employé</li>
                </ul>
            </div>
        {% else %}
            <div class="app-title">
                <div>
                    <h1><i class="fa fa-users"></i>&nbsp;Edition de {{ employee.prenom|capitalize }} {{ employee.nom|upper }}</h1>
                </div>
                <ul class="app-breadcrumb breadcrumb">
                    <li class="breadcrumb-item">
                        <a href="{{ path('main_index') }}"><i class="fa fa-home fa-lg"></i></a>
                    </li>
                    <li class="breadcrumb-item">
                        <a href="{{ path('employee_list') }}">Employé</a>
                    </li>
                    <li class="breadcrumb-item">Edition de {{ employee.prenom|capitalize }} {{ employee.nom|upper }}</li>
                </ul>
            </div>
        {% endif %}
        {{ form_start(form) }}
        <section>
            <h3>Informations générales</h3>
            <div class="row mt-4">
                <div class="offset-md-4 col-md-8">
                    <div class="form-group row">
                        {{ form_errors(form.prenom) }}
                        {{ form_label(form.prenom) }}
                        {{ form_widget(form.prenom, {'attr': {'class': 'form-control', 'placeholder': form.prenom.vars.label} }) }}
                    </div>
                    <div class="form-group row">
                        {{ form_errors(form.nom) }}
                        {{ form_label(form.nom) }}
                        {{ form_widget(form.nom, {'attr': {'class': 'form-control', 'placeholder': form.nom.vars.label} }) }}
                    </div>
                    <div class="form-group row">
                        {{ form_errors(form.mail) }}
                        {{ form_label(form.mail) }}
                        {{ form_widget(form.mail, {'attr': {'class': 'form-control', 'placeholder': form.mail.vars.label} }) }}
                    </div>
                </div>
            </div>
        </section>
        <hr/>
        <section>
            <h3>Production</h3>
            <div class="row mt-4">
                <div class="offset-md-4 col-md-8">
                    <div class="form-group row">
                        {{ form_errors(form.metier) }}
                        {{ form_label(form.metier) }}
                        {{ form_widget(form.metier, {'attr': {'class': 'form-control', 'placeholder': form.metier.vars.label} }) }}
                    </div>
                    <div class="form-group row">
                        {{ form_errors(form.coutHoraire) }}
                        {{ form_label(form.coutHoraire) }}
                        {{ form_widget(form.coutHoraire, {'attr': {'class': 'form-control', 'placeholder': form.coutHoraire.vars.label} }) }}
                    </div>
                    <div class="form-group row">
                        {{ form_errors(form.dateEmbauche) }}
                        {{ form_label(form.dateEmbauche) }}
                        {{ form_widget(form.dateEmbauche, {'attr': {'class': 'form-control', 'placeholder': form.dateEmbauche.vars.label} }) }}
                    </div>
                </div>
            </div>
        </section>
        <hr/>
        <div class="row">
            <div class="offset-md-6 col-md-6">
                <button type="submit" class="btn btn-success"><i class="fa fa-save"></i>Enregistrer</button>
            </div>
        </div>
        {{ form_end(form) }}
    </main>
{% endblock %}