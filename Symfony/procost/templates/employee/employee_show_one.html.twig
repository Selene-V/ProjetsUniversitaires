{% extends 'layout.html.twig' %}

{% block title %}Détails - {{ parent() }}{% endblock %}

{% block content %}
<main class="app-content">
    <div class="app-title">
        <div>
            <h1><i class="fa fa-users"></i>&nbsp;Suivi de {{ employee.prenom|capitalize }} {{ employee.nom|upper }}</h1>
        </div>
        <ul class="app-breadcrumb breadcrumb">
            <li class="breadcrumb-item">
                <a href="{{ path('main_index') }}"><i class="fa fa-home fa-lg"></i></a>
            </li>
            <li class="breadcrumb-item">
                <a href="{{ path('employee_list') }}">Employés</a>
            </li>
            <li class="breadcrumb-item">Suivi de {{ employee.prenom|capitalize }} {{ employee.nom|upper }}</li>
        </ul>
    </div>
    <div class="row">
        <div class="col-md-4">
            <div class="tile">
                <table class="table table-striped table-bordered table-sm">
                    <tbody>
                    <tr>
                        <th>Prénom</td>
                        <td>{{ employee.prenom|capitalize }}</td>
                    </tr>
                    <tr>
                        <th>Nom</td>
                        <td>{{ employee.nom|upper }}</td>
                    </tr>
                    <tr>
                        <th>Email</td>
                        <td>{{ employee.mail }}</td>
                    </tr>
                    <tr>
                        <th>Métier</td>
                        <td>{{ employee.metier.nom }}</td>
                    </tr>
                    <tr>
                        <th>Coût horaire</td>
                        <td>{{ employee.coutHoraire|format_currency('EUR') }}</td>
                    </tr>
                    <tr>
                        <th>Date d'embauche</td>
                        <td>{{ employee.dateEmbauche|date("d/m/Y") }}</td>
                    </tr>
                    </tbody>
                </table>
                {% if app.user.employee.id == employee.id %}
                    <a href="{{ asset('/employee/modify/' ~ employee.id) }}" class="btn btn-info">
                        <i class="fa fa-pencil"></i>Modifier
                    </a>
                {% endif %}
            </div>
            {% if is_granted('ROLE_MANAGER') and app.user.employee.id != employee.id %}
                <div class="tile">
                        {% for flash_type, messages in app.flashes %}
                            {% for message in messages %}
                                <div class="alert alert-{{ flash_type }}" role="alert">
                                    {{ message }}
                                </div>
                            {% endfor %}
                        {% endfor %}
                        <h3 class="title-title mb-4">Ajouter un temps</h3>
                        {{ form_start(form) }}
                        <div class="form-group row">
                            <label for="select-projects" class="control-label col-md-6">Projet concerné</label>
                            <div class="col-md-6">
                                {{ form_errors(form.project) }}
                                {{ form_widget(form.project, {'attr': {'class': 'form-control', 'placeholder': form.project.vars.label} }) }}
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="select-projects" class="control-label col-md-6">Nombre d'heures</label>
                            <div class="col-md-6">
                                {{ form_errors(form.nbHeures) }}
                                {{ form_widget(form.nbHeures, {'attr': {'class': 'form-control', 'placeholder': form.nbHeures.vars.label} }) }}
                            </div>
                        </div>
                        <div class="row">
                            <div class="offset-md-6 col-md-8">
                                <button type="submit" class="btn btn-success"><i class="fa fa-save"></i>Enregistrer</button>
                            </div>
                        </div>
                        {{ form_end(form) }}
                    </div>
            {% else %}
                {% if app.user.employee.id == employee.id  %}
                    <div class="tile">
                        {% for flash_type, messages in app.flashes %}
                            {% for message in messages %}
                                <div class="alert alert-{{ flash_type }}" role="alert">
                                    {{ message }}
                                </div>
                            {% endfor %}
                        {% endfor %}
                        <h3 class="title-title mb-4">Ajouter un temps</h3>
                        {{ form_start(form) }}
                        <div class="form-group row">
                            <label for="select-projects" class="control-label col-md-6">Projet concerné</label>
                            <div class="col-md-6">
                                {{ form_errors(form.project) }}
                                {{ form_widget(form.project, {'attr': {'class': 'form-control', 'placeholder': form.project.vars.label} }) }}
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="select-projects" class="control-label col-md-6">Nombre d'heures</label>
                            <div class="col-md-6">
                                {{ form_errors(form.nbHeures) }}
                                {{ form_widget(form.nbHeures, {'attr': {'class': 'form-control', 'placeholder': form.nbHeures.vars.label} }) }}
                            </div>
                        </div>
                        <div class="row">
                            <div class="offset-md-6 col-md-8">
                                <button type="submit" class="btn btn-success"><i class="fa fa-save"></i>Enregistrer</button>
                            </div>
                        </div>
                        {{ form_end(form) }}
                    </div>
                {% endif %}
            {% endif %}

        </div>
        <div class="col-md-8">
            <div class="tile pb-5">
                <h3 class="tile-title">Historique des temps de production</h3>
                <div class="table-responsive">
                    <table class="table table-striped table-hover table-sm">
                        <thead>
                        <tr>
                            <th>Projet</th>
                            <th>Temps</th>
                            <th>Date de saisie</th>
                            <th>Coût total</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for pt in productionsTimes %}
                            <tr>
                                <td>{{ pt.productionTime.project.nom|capitalize }}</td>
                                <td>{{ pt.productionTime.nbHeures }} heures</td>
                                <td>{{ pt.productionTime.dateCreation|date("d/m/Y") }}</td>
                                <td>{{ pt.coutTotal|format_currency('EUR') }}</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
                <hr/>
                {% include 'pagination.html.twig' %}
            </div>
        </div>
    </div>
</main>

{% endblock %}