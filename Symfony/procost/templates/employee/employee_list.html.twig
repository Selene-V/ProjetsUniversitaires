{% extends 'layout.html.twig' %}

{% block title %}Employés - {{ parent() }}{% endblock %}

{% block content %}
    <main class="app-content">
        <div class="app-title">
            <div>
                <h1><i class="fa fa-users"></i>&nbsp;Employés</h1>
            </div>
            <ul class="app-breadcrumb breadcrumb">
                <li class="breadcrumb-item">
                    <a href="{{ path('main_index') }}"><i class="fa fa-home fa-lg"></i></a>
                </li>
                <li class="breadcrumb-item">Employés</li>
            </ul>
        </div>
        {% for flash_type, messages in app.flashes %}
            {% for message in messages %}
                <div class="alert alert-{{ flash_type }}" role="alert">
                    {{ message }}
                </div>
            {% endfor %}
        {% endfor %}
        <div class="tile pb-5">
            {% if is_granted('ROLE_MANAGER') %}
                <a href="{{ path('employee_create') }}" class="btn btn-primary float-right mb-4"><i class="fa fa-plus-circle mr-2"></i>Ajouter un employé</a>
            {% endif %}
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead>
                    <tr>
                        <th>Nom</th>
                        <th>Email</th>
                        <th>Métier</th>
                        <th>Coût horaire</th>
                        <th>Date d'embauche</th>
                        <th></th>
                    </tr>
                    </thead>
                    <tbody>
                        {% for employee in employees %}
                            <tr>
                                <td>{{ employee.prenom|capitalize }} {{ employee.nom|upper}}</td>
                                <td>{{ employee.mail }}</td>
                                <td>{{ employee.metier.nom }}</td>
                                <td>{{ employee.coutHoraire|format_currency('EUR') }}</td>
                                <td>{{ employee.dateEmbauche|date("d/m/Y") }}</td>
                                {% if is_granted('ROLE_MANAGER') %}
                                    <td>
                                        <a href="{{ asset('/employee/show/' ~ employee.id) }}" class="btn btn-primary btn-sm">
                                            <i class="fa fa-eye mr-0"></i>
                                        </a>
                                        {% if app.user.employee.id == employee.id %}
                                            <a href="{{ asset('/employee/modify/' ~ employee.id) }}" class="btn btn-info btn-sm">
                                                <i class="fa fa-pencil mr-0"></i>
                                            </a>
                                        {% endif %}
                                    </td>
                                {% else %}
                                    <td>
                                        {% if app.user.employee.id == employee.id %}
                                            <a href="{{ asset('/employee/show/' ~ employee.id) }}" class="btn btn-primary btn-sm">
                                                <i class="fa fa-eye mr-0"></i>
                                            </a>
                                            <a href="{{ asset('/employee/modify/' ~ employee.id) }}" class="btn btn-info btn-sm">
                                                <i class="fa fa-pencil mr-0"></i>
                                            </a>
                                        {% endif %}
                                    </td>
                                {% endif %}
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
            <hr/>
            {% include 'pagination.html.twig' %}
        </div>
    </main>
{% endblock %}