{% extends 'layout.html.twig' %}

{% block title %}Métiers - {{ parent() }}{% endblock %}

{% block content %}
    <main class="app-content">
        <div class="app-title">
            <div>
                <h1><i class="fa fa fa-book"></i>&nbsp;Métiers</h1>
            </div>
            <ul class="app-breadcrumb breadcrumb">
                <li class="breadcrumb-item">
                    <a href="{{ path('main_index') }}"><i class="fa fa-home fa-lg"></i></a>
                </li>
                <li class="breadcrumb-item">Métiers</li>
            </ul>
        </div>
        {% for flash_type, messages in app.flashes %}
            {% for message in messages %}
                <div class="alert alert-{{ flash_type }}" role="alert">
                    {{ message }}
                </div>
            {% endfor %}
        {% endfor %}
        <div class="tile pb-5">
            {% if is_granted('ROLE_MANAGER') %}
                <a href="{{ path('metier_create') }}" class="btn btn-primary float-right mb-4"><i class="fa fa-plus-circle mr-2"></i>Ajouter un métier</a>
            {% endif %}
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead>
                    <tr>
                        <th>Nom</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for metier in metiers %}
                        <tr>
                            <td>{{ metier.nom }}</td>
                            {% if is_granted('ROLE_MANAGER') %}
                                <td>
                                    <a href="{{ asset('/metier/modify/' ~ metier.id) }}" class="btn btn-info btn-sm">
                                        <i class="fa fa-pencil mr-0"></i>
                                    </a>
                                    <a href="{{ asset('/metier/delete/' ~ metier.id) }}" class="btn btn-danger btn-sm">
                                        <i class="fa fa-close mr-0"></i>
                                    </a>
                                </td>
                            {% endif %}
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
            <hr/>
            {% include 'pagination.html.twig' %}
        </div>
    </main>
{% endblock %}